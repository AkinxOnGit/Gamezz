@model IEnumerable<Gamezz.Models.GamesOrders>

@{
	ViewData["Title"] = "Index";
}

<h1>Shopping Cart</h1>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Amount)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Games.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Games.Price)
			</th>

			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var gameOrders in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => gameOrders.Amount)
				</td>
				<td>
					@Html.DisplayFor(modelItem => gameOrders.Games.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => gameOrders.Games.Price) €
				</td>
				<td>
					<div class="btn-group" role="group" aria-label="Actions" style="gap: 5px">
						<form asp-action="Buy" asp-route-gameId="@gameOrders.Games.Id" asp-route-orderId="@gameOrders.OrderId" method="post">
							<button class="btn btn-primary" style="" type="submit">Buy</button>
						</form>
						<a class="btn btn-dark" asp-action="Details" asp-route-id="@gameOrders.Id">Details</a>
						<a class="btn btn-danger" asp-action="Delete" asp-route-id="@gameOrders.Id">Delete</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
