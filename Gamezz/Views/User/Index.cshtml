@model List<Microsoft.AspNetCore.Identity.IdentityUser>

<!DOCTYPE html>
<html>
<head>
    <title>Benutzerliste</title>
    <link rel="stylesheet" href="~/Gamezz/Views/User/Index.cshtml/Index.cshtml.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body>
    <h1>Benutzerliste</h1>

    <table>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Aktion</th>
        </tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Email</td>
                <td>
                    <form method="post">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-pencil-alt"></i></button>
                        <a type="submit" class="btn btn-danger" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id"><i class="fas fa-trash-alt"></i></a>
                    </form>
                </td>
            </tr>
        }
    </table>

  <form method="post">
    <button type="submit" class="add-button"><i class="fas fa-plus"></i></button>
  </form>

</body>
</html>